<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProjectTSSI"
             x:Class="ProjectTSSI.LoginWS"
             NavigationPage.HasNavigationBar="False">
    <!-- Grid Principal -->
    <Grid RowSpacing="0" Padding="50" BackgroundColor="#e6e2fd">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <!-- Contenedor AbsoluteLayout para círculos -->
        <AbsoluteLayout Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" 
                        AbsoluteLayout.LayoutBounds="0,0,1,1" 
                        AbsoluteLayout.LayoutFlags="All">

            <!-- Círculo Posicionado Libremente -->
            <Frame CornerRadius="50" WidthRequest="75" HeightRequest="75"
                   AbsoluteLayout.LayoutBounds="-.040,-.105,100,100" 
                   AbsoluteLayout.LayoutFlags="PositionProportional" 
                   ZIndex="0">
                <Frame.Background>
                    <RadialGradientBrush Radius="0.8">
                        <RadialGradientBrush.Center>
                            <Point X="0.7" Y="0" />
                        </RadialGradientBrush.Center>
                        <GradientStop Color="#9988f3" Offset="0" /> 
                        <GradientStop Color="#6852d8" Offset="1.0" /> 
                    </RadialGradientBrush>
                </Frame.Background>
            </Frame>

            <Border Stroke="White" StrokeThickness="2" BackgroundColor="White"
                AbsoluteLayout.LayoutBounds="1.032,1.06,80,80" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                WidthRequest="80" HeightRequest="80">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50" />
            </Border.StrokeShape>
            </Border>

            <!-- StackLayout 1 -->
            <Border x:Name="BorderLayoutLoginPart1" Stroke="Transparent" StrokeThickness="0" BackgroundColor="White" 
                    AbsoluteLayout.LayoutBounds="0,0,0.5,1" 
                    AbsoluteLayout.LayoutFlags="All" ZIndex="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18,0,18,0" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#6f60bb" Opacity="0.5" Offset="5,3" Radius="15" />
                </Border.Shadow>
                <StackLayout x:Name="StackLoginPart1" Padding="20" BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Label Text="INICIAR SESION" Style="{StaticResource TittleLogin}" />
                    <Label Text="Bienvenido a SmartScheduler su administrador de tareas inteligente" Style="{StaticResource SubttitleLogin}" />
                    <Grid HorizontalOptions="FillAndExpand" Padding="50,0,50,0" Margin="0,10,0,10">
                        <AbsoluteLayout x:Name="ErrorMail" HeightRequest="35"> 
                        
                        </AbsoluteLayout>
                        <Frame Padding="55,0,0,0" CornerRadius="15" BorderColor="#e6e2fd" BackgroundColor="#e6e2fd" HeightRequest="65">
                            <Entry x:Name="entryUser" Placeholder="Correo Electronico" Focused="OnFocusedUser" Unfocused="OnUnfocusedUser" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Text="{Binding LoginUserText}" Style="{StaticResource PlaceHolderLogin}" />
                        </Frame>
                        <AbsoluteLayout WidthRequest="30" HorizontalOptions="Start">
                            <Image x:Name="iconUser" Source="user_icon_inactive.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" AbsoluteLayout.LayoutBounds="20, 16,30, 30" />
                        </AbsoluteLayout>
                    </Grid>
                    <Grid HorizontalOptions="FillAndExpand" Padding="50,0,50,0" Margin="0,10,0,10">
                        <AbsoluteLayout x:Name="ErrorPassword" HeightRequest="35">

                        </AbsoluteLayout>
                        <Frame Padding="55,0,0,0" CornerRadius="15" BorderColor="#e6e2fd" BackgroundColor="#e6e2fd" HeightRequest="65">
                            <Entry x:Name="entryPassword" Placeholder="Contraseña" Focused="OnFocusedPassword" Unfocused="OnUnfocusedPassword" IsPassword="True" HorizontalOptions="FillAndExpand" Text="{Binding LoginPasswordText}" VerticalOptions="Center" Style="{StaticResource PlaceHolderLogin}" />
                        </Frame>
                        <AbsoluteLayout WidthRequest="30" HorizontalOptions="Start">
                            <Image x:Name="iconPassword" Source="password_icon_inactive.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" AbsoluteLayout.LayoutBounds="20, 16,30, 30" />
                        </AbsoluteLayout>
                    </Grid>
                    <StackLayout HorizontalOptions="FillAndExpand" Padding="90,0,90,0">
                        <Button x:Name="buttonLogin" AutomationId="ButtonToLogin" Text="INGRESAR AHORA" IsEnabled="{Binding _isButtonLoginActive}" Style="{StaticResource ButtonLogin}">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnClickHandler" />
                            </Button.GestureRecognizers>
                        </Button>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Padding="50,0,50,0" Margin="0,30,0,0">
                        <BoxView Color="#b0b0b0" HeightRequest="1" HorizontalOptions="FillAndExpand" />
                        <AbsoluteLayout HorizontalOptions="Center">
                            <Label Text="Opciones de inicio de sesion" WidthRequest="200" BackgroundColor="White" AbsoluteLayout.LayoutBounds="0,-12,-1,-1" Style="{StaticResource SubttitleLogin}" />
                        </AbsoluteLayout>
                    </StackLayout>
                    <Grid HorizontalOptions="FillAndExpand" HeightRequest="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*" />
                            <ColumnDefinition Width="0.25*" />
                            <ColumnDefinition Width="0.25*" />
                            <ColumnDefinition Width="0.25*" />
                        </Grid.ColumnDefinitions>
                        <Image Source="facebook_icon.png" Grid.Column="0" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Image Source="github_icon.png" Grid.Column="1" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Image Source="google_icon.png" Grid.Column="2" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Image Source="twitter_icon.png" Grid.Column="3" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Grid>
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <Label AutomationId="LabelRegister" Text="¿No tiene ninguna cuenta?" Grid.Column="0" TextColor="#535cae" FontSize="11" FontFamily="PoppinsRegular"  Style="{StaticResource SubttitleLogin}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnClickHandler" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label AutomationId="LabelEnterWithOut" Text="Ingresar sin ninguna cuenta" Grid.Column="1" TextColor="#535cae" FontSize="11" FontFamily="PoppinsRegular" Style="{StaticResource SubttitleLogin}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnClickHandler" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                    
                </StackLayout>
            </Border>

            <!-- StackLayout 2 -->
            <Border x:Name="BorderLayoutLoginPart2" Stroke="Transparent" StrokeThickness="0" BackgroundColor="#6852d8" 
                    AbsoluteLayout.LayoutBounds="1,0,0.5,1" 
                    AbsoluteLayout.LayoutFlags="All" ZIndex="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,18,0,18" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#6f60bb" Opacity="0.7" Offset="7,3" Radius="15" />
                </Border.Shadow>
                <StackLayout Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <StackLayout.Background>
                        <RadialGradientBrush>
                            <RadialGradientBrush.Center>
                                <Point X="0.9" Y="0.0" /> 
                            </RadialGradientBrush.Center>
                            <GradientStop Color="#8472e5" Offset="0" /> 
                            <GradientStop Color="#6852d8" Offset="1.0" /> 
                        </RadialGradientBrush>
                    </StackLayout.Background>
                    <!-- Segundo StackLayout centrado y expandido -->
                    <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Image Source="second_background_login.png" 
                        Opacity="0.5" 
                        Aspect="AspectFill" 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="FillAndExpand"
                        ZIndex="0" />
                        <!-- Frame que permanecerá centrado -->
                        <Frame x:Name="StackLoginPart2" 
                            CornerRadius="20" 
                            BackgroundColor="#10FFFFFF" 
                            BorderColor="White" 
                            HeightRequest="350" 
                            WidthRequest="280"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand" />

                        <!-- AbsoluteLayout que permite que la imagen se superponga al Frame Primera(130, -23, 280, 350) Segunda(20, -23, 280, 350) Tercera(Height="355",Width="340",0, -6, 280, 350)-->
                        <AbsoluteLayout x:Name="StackLoginPart3" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Image x:Name="animationImagesLogin"
                                HeightRequest="350"
                                WidthRequest="280"
                                Aspect="AspectFill"
                                Source="login_image_one.png"
                                AbsoluteLayout.LayoutBounds="130, -23, 280, 350"
                                AbsoluteLayout.LayoutFlags="None" />
                                
                        </AbsoluteLayout>
                    </Grid>
                    
                </StackLayout>
            </Border>
        </AbsoluteLayout>
        <AbsoluteLayout x:Name = "LoaderPrincipalPage" Grid.Column="0" Grid.ColumnSpan="2" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" IsVisible="False">
        
        </AbsoluteLayout>
    </Grid>
</ContentPage>
